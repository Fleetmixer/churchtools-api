{
	"name" : "Fleetmixer/churchtools-api",
	"type" : "library",
	"description" : "Object-oriented API access to ChurchTools",
	"homepage" : "https://github.com/vineyardkoeln/churchtools-api",
	"license" : "Apache-2.0",
    "authors": [
        {"name": "Jörn Wagner", "email": "joern.wagner@vineyard.koeln"},
        {"name": "André Schild", "email": "andre@schild.ws"}
	],
	"require" : {
		"php" : ">=8.3",
		"ext-json" : "*",
		"guzzlehttp/psr7" : "^2.6",
		"guzzlehttp/guzzle" : "^7.8",
		"symfony/translation-contracts": "^2.5.0",
		"jane-php/open-api-3": "^7.7"
	},
	"require-dev" : {
		"squizlabs/php_codesniffer" : "^3.5.4"
	},
	"autoload" : {
		"psr-4" : {
			"ChurchTools\\" : "src/ChurchTools"
		}
	},
	"config": {
		"allow-plugins": {
			"php-http/discovery": true
		}
	}
}
